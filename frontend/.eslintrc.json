{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
        "jsx": true,
        "modules": true
        }
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "17.0.2"
        }
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "no-unused-vars": ["warn", {
            "argsIgnorePattern": "req|res|next|__"
        }],
        "allowEmptyCatch": 0,
        "react/no-children-prop": "off",
        "no-undef": "off",
        "react/display-name": "off",
        "react/no-unescaped-entities": ["error", {"forbid": [">", "}"]}]
    }
}